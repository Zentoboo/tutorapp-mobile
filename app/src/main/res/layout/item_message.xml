<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-material"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Sender's message (right aligned) -->
    <LinearLayout
        android:id="@+id/senderMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:minWidth="80dp">

                <TextView
                    android:id="@+id/senderMessageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:maxWidth="250dp"
                    android:breakStrategy="balanced" />

                <TextView
                    android:id="@+id/senderTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10:30 AM"
                    android:textSize="11sp"
                    android:textColor="#E0E0E0"
                    android:layout_gravity="end" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Receiver's message (left aligned) -->
    <LinearLayout
        android:id="@+id/receiverMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F0F0F0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:minWidth="80dp">

                <TextView
                    android:id="@+id/receiverMessageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi there!"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:maxWidth="250dp"
                    android:breakStrategy="balanced" />

                <TextView
                    android:id="@+id/receiverTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10:30 AM"
                    android:textSize="11sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>